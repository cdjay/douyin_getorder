# 数据库配置
# 格式：postgresql://用户名:密码@主机:端口/数据库名
DB_URL=postgresql://username:password@localhost:5432/database_name

# 抖音本地生活配置
# APPID: 从抖音开放平台获取的应用ID
APPID=your_app_id

# AppSecret: 从抖音开放平台获取的应用密钥（用于API签名和解密）
AppSecret=your_app_secret

# ACCOUNT_ID: 抖音账号ID
ACCOUNT_ID=your_account_id

# API 配置
# API基础URL，通常为：https://open.douyin.com
API_BASE_URL=https://open.douyin.com

# 任务配置
# TASK_ID: 任务唯一标识符
TASK_ID=douyin_order_sync

# SYNC_INTERVAL: 同步间隔（秒），默认3600（1小时）
SYNC_INTERVAL=3600

# 订单查询参数配置
# SYNC_DAYS: 同步时间范围（天），默认同步最近1天的数据
# 注意：如果配置了 START_DATE/END_DATE 或 START_TIME/END_TIME，则优先使用自定义时间范围
SYNC_DAYS=1

# 自定义时间范围（可选）
# 方式1：使用自然日期格式（推荐）
# 支持两种格式：
#   - YYYY-MM-DD（自动默认时间为 00:00:00）
#   - YYYY-MM-DD HH:MM:SS（指定具体时间）
# 
# 示例1：同步2024年全年的订单
# START_DATE=2024-01-01
# END_DATE=2024-12-31
# 
# 示例2：同步指定时间段的订单
# START_DATE=2024-01-01 10:00:00
# END_DATE=2024-01-31 18:00:00
START_DATE=
END_DATE=

# 方式2：使用时间戳（向后兼容）
# 单位：秒时间戳
# 示例：START_TIME=1704067200 表示 2024-01-01 00:00:00
# START_TIME=
# END_TIME=

# 注意：如果配置了 START_DATE 和 END_DATE，则优先使用日期格式；否则使用 START_TIME 和 END_TIME

# 订单状态筛选（可选），不配置则拉取所有状态
# 例如：2=已完成, 3=退款中, 4=已退款
ORDER_STATUS=

# PAGE_SIZE: 每页订单数量（1-100），默认50
PAGE_SIZE=50

# GET_SECRET_NUMBER: 是否查询配送信息（true/false），默认false
GET_SECRET_NUMBER=false

# USE_CREATE_TIME: 是否使用创单时间而非修改时间（true/false），默认false
USE_CREATE_TIME=true
